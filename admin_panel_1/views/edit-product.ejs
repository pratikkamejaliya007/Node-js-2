<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Edit</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
        rel="stylesheet"
    />
</head>
<body>
<div class="container mt-4">
  <div class="row">
    <div class="col-sm-12 col-md-6"> <!-- Adjusted for responsiveness -->
      <div class="card">
        <!-- Product Image Upload -->
        <img
          src="/<%= edit.ProductImg %>"
          class="card-img-top"
          alt="Product Image"
        />
        <div class="card-body">
          <h5 class="card-title">Edit Product</h5>

          <!-- Edit Form -->
          <form action="/product/edit/<%= edit.id %>" method="POST" enctype="multipart/form-data" >
            <!-- Title -->
            <div class="mb-3">
              <label for="productTitle" class="form-label">Product Title</label>
              <input
                type="text"
                class="form-control"
                id="productTitle"
                value="<%= edit.title %>"
                placeholder="Enter Product Title"
                name="title"
                required
              />
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="productPrice" class="form-label">Price</label>
              <input
                type="number"
                class="form-control"
                id="productPrice"
                placeholder="Enter Price"
                value="<%= edit.price %>"
                name="price"
                required
              />
            </div>

            <!-- Rating -->
            <div class="mb-3">
              <label for="productRating" class="form-label">Rating</label>
              <input
                type="number"
                class="form-control"
                id="productRating"
                value="<%= edit.rating %>"
                placeholder="Enter Rating (1 to 5)"
                min="1"
                max="5"
                step="0.2"
                name="rating"
                required
              />
            </div>
            <div class="form-group row">
                <label class="col-md-3">Sub Category</label>
                <div class="col-md-9">
                  <div class="custom-file">
                    <select name="SubcategoryID" id="">
                     <% sub.map((el,i)=>{ %>
                          <option value="<%= el.id %>"><%= el.subcategory %></option>
                      <% }) %>
                    </select>
                    <div class="invalid-feedback">
                      Example invalid custom file feedback
                    </div>
                  </div>
                </div>
              </div> 
            <!-- Image Upload -->
            <div class="mb-3">
              <label for="productImg" class="form-label">Upload Product Image</label>
              <input
                type="file"
                class="form-control"
                id="productImg"
                name="ProductImg"
              />
            </div>

            <!-- Submit and Cancel Buttons -->
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary btn-sm">
                Save
              </button>
              <button type="button" class="btn btn-secondary btn-sm">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
