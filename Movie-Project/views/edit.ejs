<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col justify-between">

    <!-- Header Section -->
    <header class="bg-white py-4 shadow-md">
        <div class="container mx-auto text-center">
            <h1 class="text-2xl font-bold text-gray-800">Edit Movie Details</h1>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto mt-6 flex-grow">
        <!-- Image Preview -->
        <div class="flex justify-center mb-6">
            <img id="movieImage" src="/<%= editdata.poster %>" alt="Movie Poster" class="h-64 w-48 object-cover rounded-lg shadow-lg">
        </div>

        <!-- Edit Form -->
        <form class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto" action="/edit/<%= editdata._id  %>" method="post" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-4">
                <label for="title" class="block text-gray-700 font-bold mb-2">Title:</label>
                <input type="text" name="title" value="<%= editdata.title %>" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter movie title">
            </div>
            
            <!-- Year -->
            <div class="mb-4">
                <label for="year" class="block text-gray-700 font-bold mb-2">Year:</label>
                <input type="number" name="year" value="<%= editdata.year %>" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter release year">
            </div>

            <!-- Category -->
            <div class="mb-4">
                <label for="category" class="block text-gray-700 font-bold mb-2">Category:</label>
                <input type="text" name="category" value="<%= editdata.category %>" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter movie category">
            </div>

            <!-- Rating -->
            <div class="mb-4">
                <label for="rating" class="block text-gray-700 font-bold mb-2">Rating:</label>
                <input type="number" name="rating" min="1.0" max="5.0" step="0.2" value="<%= editdata.rating %>" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter movie rating">
            </div>

            <!-- Poster URL -->
            <div class="mb-4">
                <label for="poster" class="block text-gray-700 font-bold mb-2">Poster URL:</label>
                <input type="file" name="poster" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter poster image URL">
            </div>

            <!-- Save Button -->
            <div class="flex justify-center">
                <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-600 transition duration-300">Save Changes</button>
            </div>
        </form>
    </main>

</body>
</html>
